/* Header file containing register offestes */


/* GPIO */

#define GPIO_PA_CTRL     0x00
#define GPIO_PA_MODEL    0x04
#define GPIO_PA_MODEH    0x08
#define GPIO_PA_DOUT     0x0c
#define GPIO_PA_DOUTSET  0x10
#define GPIO_PA_DOUTCLR  0x14
#define GPIO_PA_DOUTTGL  0x18
#define GPIO_PA_DIN      0x1c
#define GPIO_PA_PINLOCKN 0x20

#define GPIO_PC_CTRL     0x48
#define GPIO_PC_MODEL    0x4c
#define GPIO_PC_MODEH    0x50
#define GPIO_PC_DOUT     0x54
#define GPIO_PC_DOUTSET  0x58
#define GPIO_PC_DOUTCLR  0x5C
#define GPIO_PC_DOUTTGL  0x60
#define GPIO_PC_DIN      0x64
#define GPIO_PC_PINLOCKN 0x68

#define GPIO_EXTIPSELL 0x100
#define GPIO_EXTIPSELH 0x104
#define GPIO_EXTIRISE  0x108
#define GPIO_EXTIFALL  0x10c
#define GPIO_IEN       0x110
#define GPIO_IFC       0x11c



/* TIMER3 */

#define TIMER3_CMD 0x04
#define TIMER3_IEN 0x0c
#define TIMER3_IFC 0x18
#define TIMER3_TOP 0x1c
#define TIMER3_CNT 0x24


/* DAC0 */

#define DAC0_CTRL     0x000
#define DAC0_CH0CTRL  0x008
#define DAC0_CH1CTRL  0x00c
#define DAC0_IEN      0x010
#define DAC0_IF       0x014
#define DAC0_IFS      0x018
#define DAC0_IFC      0x01c
#define DAC0_CH0DATA  0x020
#define DAC0_CH1DATA  0x024
#define DAC0_COMBDATA 0x028


/* DMA */

#define DMA_STATUS      0x0000
#define DMA_CONFIG      0x0004
#define DMA_CTRLBASE    0x0008
#define DMA_ALTCTRLBASE 0x000c
#define DMA_CHUSEBURSTS 0x0018
#define DMA_CHUSEBURSTC 0x001c
#define DMA_REQMASKC    0x0024
#define DMA_CHENS       0x0028
#define DMA_CHALTC      0x0034
#define DMA_IFC         0x1008
#define DMA_IEN         0x100c
#define DMA_CH0_CTRL    0x1100
